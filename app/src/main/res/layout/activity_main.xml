<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#c4c4c4"
    android:backgroundTint="#F5F5F5"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <!--Dictionary Header-->
    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:shadowColor="#eae8e4"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="6"
        android:text="@string/app_name"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="36sp"
        android:textStyle="bold" />
    <!--Search Layout-->
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="57dp"
        android:autofillHints="@android:string/autofill"
        android:background="@drawable/shadow_search"
        android:backgroundTint="#ffffff"
        android:elevation="20dp"
        android:scrollbarSize="10dp" />

    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="57dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="57dp"
        android:orientation="horizontal">

        <!--        Insert Button-->
        <Button
            android:id="@+id/insert"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_search"
            android:backgroundTint="#879eb0"
            android:elevation="20dp"
            android:text="Insert"
            android:textSize="15sp" />

        <android.widget.Space
            android:layout_width="30dp"
            android:layout_height="50dp" />


    </LinearLayout>

    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <!--        <Button-->
    <!--            android:id="@+id/delete"-->
    <!--            android:layout_width="fill_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:background="@drawable/shadow_search"-->
    <!--            android:backgroundTint="#944545"-->
    <!--            android:clickable="true"-->
    <!--            android:elevation="200dp"-->
    <!--            android:text="Delete"-->
    <!--            android:textSize="15sp" />
        <!-    <androidx.cardview.widget.CardView-->

    <!--        android:id="@+id/card_view"-->
    <!--        android:layout_width="match_parent"-->

    <!--        android:layout_height="200dp"-->

    <!--        android:layout_marginStart="30dp"-->

    <!--        android:layout_marginLeft="57dp"-->
    <!--        android:layout_marginEnd="20dp"-->
    <!--        android:layout_marginRight="57dp"-->
    <!--        android:background="@drawable/shadow_search"-->
    <!--        android:backgroundTint="#3E4550"-->
    <!--        card_view:cardCornerRadius="40dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="57dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="57dp"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"

        android:background="@drawable/shadow_search"

        android:backgroundTint="#ffffff"
        android:elevation="20dp"
        android:orientation="vertical">
        <!--    Words List Header-->
        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Words"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"

                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/app_name"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="italic" />

            <android.widget.Space
                android:layout_width="60dp"
                android:layout_height="fill_parent" />

            <Button
                android:id="@+id/delete1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shadow_search"
                android:backgroundTint="#944545"
                android:clickable="true"
                android:elevation="200dp"
                android:text="Delete"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"

                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/app_name"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="italic" />

            <android.widget.Space
                android:layout_width="60dp"
                android:layout_height="fill_parent" />

            <Button
                android:id="@+id/delete2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shadow_search"
                android:backgroundTint="#944545"
                android:clickable="true"
                android:elevation="200dp"
                android:text="Delete"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"

                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/app_name"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="italic" />

            <android.widget.Space
                android:layout_width="60dp"
                android:layout_height="fill_parent" />

            <Button
                android:id="@+id/delete3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shadow_search"
                android:backgroundTint="#944545"
                android:clickable="true"
                android:elevation="200dp"
                android:text="Delete"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>
    <!--    </androidx.cardview.widget.CardView>-->

</LinearLayout>

